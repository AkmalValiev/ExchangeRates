<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/line"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/image_store"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_width="40dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_marginTop="15dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:text="AQSH dollari"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/image_store"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/linea11"
        app:layout_constraintRight_toLeftOf="@id/linea12"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/image_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date"
            android:textColor="@color/black"
            android:text="12.12.2022"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/time"
            android:text="22:22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linea12"
        android:orientation="vertical"
        app:layout_constraintRight_toLeftOf="@id/linea13"
        app:layout_constraintLeft_toRightOf="@id/linea11"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/image_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cell_store"
            android:text="Sotilishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/price_cell"
            android:text="10800 UZS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linea13"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/linea12"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/image_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/buy_store"
            android:text="Olinishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/price_buy"
            android:text="10800 UZS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>